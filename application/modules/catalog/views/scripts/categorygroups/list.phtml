<script type="text/javascript">
jQuery('#list').jqGrid({
	url:'/catalog/categorygroups/list/format/json',
	datatype: 'json',
	mtype: 'GET',
	colNames:['Id', 'Order', 'Category', 'Group'],
	colModel :[
	  {name:'CATEGORYGROUPS_ID', index:'CATEGORYGROUPS_ID', sorttype:'int', width:50},
	  {name:'CATEGORYGROUPS_SORTORDER', index:'CATEGORYGROUPS_SORTORDER', editable:true, sorttype:'int'},
	  {name:'CATEGORYGROUPS_CATEGORY', index:'CATEGORYGROUPS_CATEGORY', editable:true, editrules:{required:true}, edittype:'select', editoptions:{value:{<?php foreach ($this->cats as $id => $title) echo "{$id}:'{$title}',"; ?>}}},
	  {name:'CATEGORYGROUPS_GROUP', index:'CATEGORYGROUPS_GROUP', editable:true, editrules:{required:true}, edittype:'select', editoptions:{value:{<?php foreach ($this->groups as $id => $title) echo "{$id}:'{$title}',"; ?>}}}],
