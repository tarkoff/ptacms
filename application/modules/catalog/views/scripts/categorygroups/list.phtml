	rowNum:20,
	rowList:[20, 40, 60, 80, 100, 150, 200],
	sortname: 'CATEGORIES_ID',
	sortorder: 'asc',
	viewrecords: true,
	caption: 'Categy Groups View',
	editurl: "/catalog/categorygroups/edit",
	height:'auto',
	width:'700'
}).navGrid('#pager',{
	edit:true, add:true, del:true, search:true
}).navButtonAdd('#pager',{
	caption:"Fields",
	onClickButton: function(id) {
		var gr = jQuery("#list").getGridParam("selrow");
